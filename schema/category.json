{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cdn.jsdelivr.net/gh/johnmuhl/bjcp-style-guidelines/schema/category.json",
  "title": "Category",
  "description": "A BJCP Style Guidelines category",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "notes": {
      "type": "string"
    },
    "styles": {
      "type": "array"
    },
    "subcategories": {
      "type": "array"
    }
  },
  "required": ["id", "name"]
}
